<div id="breadcrumbs">
    <%= link_to raw('&laquo; Back to Search'), :back %>
</div>
<div id="td_contents">        
        <h2 class="colorOrange"><%= @trial.title %></h2>
        <h3 class="briefAbstract"><%= @trial.official_title %></h3>
        <div class="td_purpose greyBackground mt20">
            <h4 class="detailDesc">
                Study Purpose:</h4>
            <p><%= @trial.description %></p>
            <h4 class="detailDesc">
                Recruitment Information:</h4>
            <table class="studyDetailsTable" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    <tr>
                        <td class="bold">
                            Accepts Control Volunteers:
                        </td>
                        <td>
                            <%= @trial.healthy_volunteers %>
                        </td>
                        <td class="bold">
                            Study Type:
                        </td>
                        <td>
                            <%= @trial.study_type %>
                        </td>
                    </tr>
                    <tr>
                        <td class="bold">
                            Eligible Ages:
                        </td>
                        <td>
                            <%= @trial.minimum_age %> - <%= @trial.maximum_age %>
                        </td>
                        <td class="bold">
                            Phase:
                        </td>
                        <td>
                            <%= @trial.phase %>
                        </td>
                    </tr>
                    <tr>
                        <td class="bold">
                            Time Since Diagnosis:
                        </td>
                        <td>
                            Any may be eligible
                        </td>
                        <td class="bold">
                            Study Focus:
                        </td>
                        <td>
                            <%= @trial.focus %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="expandableTrialDetails" id="expandFullLink">
                More Details<span class="expandIcon">▼</span>
        </div>
        <div class="td_purpose whitesmokeBorder" id="expandFullDescription" style="display: none;">
            <p><%= @trial.detailed_description %></p>
            <div id="studyDetailsContainer">
                <table class="studyDetailsTable" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td class="bold">
                                Status:
                            </td>
                            <td>
                                <%= @trial.overall_status %>
                            </td>
                            <td class="bold">
                                Lead Sponsor:
                            </td>
                            <td>
                                <%= @trial.sponsor %>
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Trial ID:
                            </td>
                            <td>
                                <%= @trial.nct_id %>
                            </td>
                            <td class="bold">
                                Sponsor Type:
                            </td>
                            <td>
                                NIH
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Country:
                            </td>
                            <td>
                                <%= @trial.location_countries %>
                            </td>
                            <td class="bold">
                                Collaborators:
                            </td>
                            <td>
                                
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Study Website:
                            </td>
                            <td>
                                <a id="body_LinkURL" href="<%= @trial.link_url %>" target="_blank"><%= @trial.link_description %></a>
                            </td>
                            <td class="bold">
                            </td>
                            <td>
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="expandableTrialDetails" id="expandExclusion">
                More Inclusion &amp; Exclusion Criteria<span class="expandIcon">▼</span>
        </div>
        <div class="td_purpose whitesmokeBorder" id="exclusionCriteria" style="display: none;">
            <h4>
                Inclusion Criteria</h4>
            <div class="mt10 mb10" style="padding-bottom:1em; border-bottom: 2px solid whitesmoke;"><%= @trial.inclusion %>
            </div>
            
            </div>
        <div class="clear" style="margin-bottom:3em;">
        </div>
        <div id="contactDetails">
            <div id="contactDetailsContainer">
            <div>
                <h2 class="colorOrange">
                    Contact a Trial Team</h2>
                <h3 class="briefAbstract">
                    If you are interested in learning more about this trial, find the trial site nearest  to your location and contact the site coordinator via email or phone.</h3>
            </div>

                <% @sites.each do |site| %>
                    <ul class="locations">
                        <li class="trialCity bold width50"><span>
                            <%= "#{site.city} #{site.state}" %></span></li>
                        <li class="trialFacility"><span style="display: none;">
                            </span></li>
                        <li class="trialStatus width40"><span class="bold">
                            Status:</span>
                            <%=  "#{site.status}" %></li>
                        <li class="locationDetails">
                            <ul>
                                <li class="width50 pr25">
                                    <div>
                                        <%= "#{site.facility}" %>
                                        <br>
                                        <%= "#{site.facility} #{site.city} #{site.state} #{site.country} #{site.zip_code}" %>
                                    </div>
                                </li>
                                <li class="width40">
                                    <div>
                                        
                                        <%=  "#{site.contact_name}" %>
                                        <br>
                                        <a href="mailto:<%=  "#{site.contact_phone_email}" %>">
                                            <%=  "#{site.contact_phone_email}" %></a>
                                        <br>
                                        <%=  "#{site.contact_phone} #{site.contact_phone_ext}" %>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                <% end %>                
            </div>
        </div>
        <div class="clear">
        </div>
    <div class="form-row">
        <%= link_to raw('&laquo; Back to Search'), :back %>    
    </div>
    </div>

    <div id="rightSideCallouts">
        <div style="height:100px; width:100%; background-color:orange; margin:0.83em 0;">
            <h2>Coming soon...</h2>
        </div>
    </div>