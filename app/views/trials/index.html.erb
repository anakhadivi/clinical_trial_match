
<div class="search_bar">
<%= render "searchform" %>

</div>

<div class="search_results">
  


  <% if @trials.nil? || @trials.empty? %>
    <h3>Your search returned no results.</h3>
    <p>Expand your search criteria or <%= link_to "create an account", new_user_registration_path %> and receive emails about future trials that you may be eligible for.</p>
  <% else %>

<div class="pagination2">
  <%= will_paginate @trials, :container => false %>
</div>
  <p style="float:right;">Displaying <%=@trials.total_entries %> <%= @trials.total_entries.to_i > 1 ? "trials" : "trial" %> by <%= select_tag(:order_type,
    options_for_select([['ABC', 'abc'], ['Last Updated', 'last_updated']], params[:order_type]||'abc' )) %>.</p>
  
  <% @trials.each do |trial| %>
  <table class="table">
    <tbody>
      
        <tr>
          <td colspan="2"><%= link_to trial.title, trial %></td>
        </tr>
        <tr>
          <td style="width:120px;">Study Type:</td><td><%= trial.study_type %></td>
        </tr>
        <tr>
          <td>Study Focus:</td><td><%= trial.focus %></td>
        </tr>
        <tr>
          <td>Sponsor:</td><td><%= trial.sponsor %></td>
        </tr>
        <tr>
          <td>Status:</td><td><%= trial.overall_status %></td>
         </tr>
         <tr>
            <td>Accepts Controls:</td><td>
              <%= (trial.healthy_volunteers == "Accepts Healthy Volunteers") ? "Yes" : "No"   %>
            </td>
         </tr>
        <tr>
          <td>Gender:</td><td><%= trial.gender %></td>
         </tr>
        <tr>
          <td>Age:</td><td><%= trial.minimum_age.to_s + " - " + trial.maximum_age.to_s %></td>
         </tr>
        <% unless trial.sites.first.nil? %>
        <tr>
          <td>Nearest Location:</td><td>
            <%= trial.sites.first.facility %>
          </td>
        </tr>
        <% end %>


    </tbody>
  </table>
      <% end %>


     <div class="pagination2" style="margin-bottom:50px;">
      <%= will_paginate @trials, :container => false %>
    </div>
  
     <% end%>
</div>

<div class="clear"></div>
