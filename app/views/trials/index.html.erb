
<div class="search_bar">
<%= render "searchform" %>

</div>

<div class="search_results">
  


  <% if @trials.nil? %>
    <p class="blueBox">Your search returned no results. Expand your search criteria.</p>
  <% else %>

<div class="pagination2">
  <%= will_paginate @trials, :container => false %>
</div>
  <p style="float:right;">Displaying <%=@trials.total_entries %> <%= @trials.total_entries.to_i > 1 ? "trials" : "trial" %>.</p>
  
  <% @trials.each do |trial| %>
  <table class="table">
    <tbody>
      
        <tr>
          <td colspan="2"><%= link_to trial.title, trial %></td>
        </tr>
        <tr>
          <td style="width:120px;">Study Type:</td><td><%= trial.study_type %></td>
        </tr>
        <tr>
          <td>Study Focus:</td><td><%= trial.focus %></td>
        </tr>
        <tr>
          <td>Sponsor:</td><td><%= trial.sponsor %></td>
        </tr>
        <tr>
          <td>Status:</td><td><%= trial.overall_status %></td>
         </tr>
         <tr>
            <td>Accepts Controls:</td><td>
              <%= (trial.healthy_volunteers == "Accepts Healthy Volunteers") ? "Yes" : "No"   %>
            </td>
         </tr>
        <tr>
          <td>Gender:</td><td><%= trial.gender %></td>
         </tr>
        <tr>
          <td>Age:</td><td><%= trial.minimum_age.to_s + " - " + trial.maximum_age.to_s %></td>
         </tr>
        <tr>
          <td>Nearest Location:</td><td>
            <%= trial.sites.first.facility %>
          </td>
        </tr>


    </tbody>
  </table>
      <% end %>


     <div class="pagination2" style="margin-bottom:50px;">
      <%= will_paginate @trials, :container => false %>
    </div>
  
     <% end%>
</div>

<div class="clear"></div>
