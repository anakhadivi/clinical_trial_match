<h1>Browse Trials</h1>

<p style="float:right;">Displaying <%=@trials.total_entries%> trials.</p>
<%= will_paginate @trials %>

<% @trials.each do |trial| %>
<table class="table">
  <tbody>
    
      <tr>
        <td colspan="3"><%= link_to trial.title, trial %></td>
      </tr>
        <td>Study Type:</td><td colspan="2"><%= trial.focus %></td>
      </tr>
        <td>Study Focus:</td><td colspan="2"><%= trial.focus %></td>
      </tr>
        <td>Sponsor:</td><td colspan="2"><%= trial.sponsor %></td>
      </tr>
        <td>Status:</td><td colspan="2"><%= trial.overall_status %></td>
       </tr>
      </tr>
      <tr><td>Nearest Locations</td></tr>
      <% trial.sites.each do |site| %>
       <tr> 
        <td></td><td><%= site.facility %></td><td><%= "#{site.distance_from([40.7522926,-73.9900131]).round()} miles away"  %></td>
       </tr>
       <% end %>

  </tbody>
</table>
<br>
<hr>
    <% end %>


<p style="float:right;">Displaying <%=@trials.total_entries%> trials.</p>
   <%= will_paginate @trials %>


